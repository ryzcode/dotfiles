" ### Personal Settings ### "
set nocompatible

" # Tabs
set ls=2
set tabstop=4
set expandtab
set shiftwidth=4
set list listchars=tab:>-,trail:+

" # Visual
set number
set title
syntax on
colorscheme torte

" # Search
set wrapscan
set ignorecase
set smartcase
set hlsearch

" # File related
set autoread

" # Command related
set backspace=indent,eol,start
set wildmenu

" # Auto Save related
set nobackup

" # Features
set backspace=indent,eol,start

" # Shortcuts
" map <F2> <esc>:NERDTreeToggle<CR>
" map! <F2> <esc>:NERDTreeToggle<CR>
" map <F3> <esc>:x<CR>
" map! <F3> <esc>:x<CR>
" map <F4> <esc>:q!<CR>
" map! <F4> <esc>:q!<CR>
" map <F5> <esc>:wq<CR>
" map! <F5> <esc>:wq<CR>


" # NERDTree settings
"let NERDTreeShowHidden=1
"let NERDTreeShowBookmarks=1
"let NERDTreeWinPos="right"
" # Open NERDTree at launch
"au VimEnter * NERDTree

